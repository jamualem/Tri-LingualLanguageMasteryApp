<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity18"
    android:background="@drawable/brana">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-116dp"
        tools:layout_editor_absoluteY="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.02" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.98" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.35" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.65" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.7" />




            <TextView
                android:id="@+id/kk0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="CHOOSE THE BEST ANSWER"
                android:textColor="@color/black"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline5"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/kk1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1) Did the young Shepherd Boy tend his sheep near a bright forest?"
                android:textColor="@color/black"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline5"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/kk0" />

            <RadioGroup
                android:id="@+id/rgp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline8"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/kk1"
               >
                <RadioButton
                    android:id="@+id/rbt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="true"
                    android:textSize="@dimen/alms"
                  />
                <RadioButton
                    android:id="@+id/rbt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="false"
                    android:textSize="@dimen/alms"
                  />
            </RadioGroup>

            <TextView
                android:id="@+id/kk2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2) Did the boy cry out “Wolf, Wolf” to trick the villagers?"
                android:textColor="@color/black"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline5"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/rgp" />

            <RadioGroup
                android:id="@+id/rgp1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline8"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/kk2"
                >
                <RadioButton
                    android:id="@+id/rbt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="true"
                    android:textSize="@dimen/alms"
                    />
                <RadioButton
                    android:id="@+id/rbt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="false"
                    android:textSize="@dimen/alms"
                    />
            </RadioGroup>





            <TextView
                android:id="@+id/kk3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3) Did the villagers come to the boy's help when he called out 'Wolf, Wolf' for the first time?"
                android:textColor="@color/black"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline5"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/rgp1" />

            <RadioGroup
                android:id="@+id/rgp2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline8"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/kk3"
                >
                <RadioButton
                    android:id="@+id/rbt4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="true"
                    android:textSize="@dimen/alms"
                    />
                <RadioButton
                    android:id="@+id/rbt5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="false"
                    android:textSize="@dimen/alms"
                    />
            </RadioGroup>



            <TextView
                android:id="@+id/kk4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4) Did the Wolf eat all the boy's sheep?"
                android:textColor="@color/black"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline5"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/rgp2" />

            <RadioGroup
                android:id="@+id/rgp3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline8"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/kk4"
                >
                <RadioButton
                    android:id="@+id/rbt6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="true"
                    android:textSize="@dimen/alms"
                    />
                <RadioButton
                    android:id="@+id/rbt7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="false"
                    android:textSize="@dimen/alms"
                    />
            </RadioGroup>





            <TextView
                android:id="@+id/kk5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5) Did the wise man of the village say, 'A liar will always be believed, even when he speaks the truth.'"
                android:textColor="@color/black"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline5"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/rgp3" />

            <RadioGroup
                android:id="@+id/rgp4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline8"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/kk5"
                >
                <RadioButton
                    android:id="@+id/rbt8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="true"
                    android:textSize="@dimen/alms"
                    />
                <RadioButton
                    android:id="@+id/rbt9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="false"
                    android:textSize="@dimen/alms"
                    />
            </RadioGroup>




            <TextView
                android:id="@+id/kk6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="6) Where did the Shepherd Boy tend his sheep?"
                android:textColor="@color/black"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline5"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/rgp4" />

            <RadioGroup
                android:id="@+id/rgp5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline8"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/kk6"
                >
                <RadioButton
                    android:id="@+id/rbt10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Near a river"
                    android:textSize="@dimen/alms"
                    />
                <RadioButton
                    android:id="@+id/rbt11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" At the foot of a mountain near a dark forest"
                    android:textSize="@dimen/alms"
                    />
                <RadioButton
                    android:id="@+id/rbt12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="In a bright forest"
                    android:textSize="@dimen/alms"
                    />
                <RadioButton
                    android:id="@+id/rbt13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" In a meadow"
                    android:textSize="@dimen/alms"
                    />
            </RadioGroup>



            <TextView
                android:id="@+id/kk7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="7) Why did the boy call out 'Wolf, Wolf'?"
                android:textColor="@color/black"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline5"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/rgp5" />

            <RadioGroup
                android:id="@+id/rgp6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline8"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/kk7"
                >
                <RadioButton
                    android:id="@+id/rbt14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To warn the villagers about a real wolf"
                    android:textSize="@dimen/alms"
                    />
                <RadioButton
                    android:id="@+id/rbt15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To get some company and excitement"
                    android:textSize="@dimen/alms"
                    />
                <RadioButton
                    android:id="@+id/rbt16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To test the villagers' gullibility"
                    android:textSize="@dimen/alms"
                    />
                <RadioButton
                    android:id="@+id/rbt17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" To ask for help with his sheep"
                    android:textSize="@dimen/alms"
                    />
            </RadioGroup>




            <TextView
                android:id="@+id/kk8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="8) What did the villagers do when the boy called out 'Wolf, Wolf' for the first time?"
                android:textColor="@color/black"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline5"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/rgp6" />

            <RadioGroup
                android:id="@+id/rgp7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline8"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/kk8"
                >
                <RadioButton
                    android:id="@+id/rbt18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="They ignored him"
                    android:textSize="@dimen/alms"
                    />
                <RadioButton
                    android:id="@+id/rbt19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="They helped him for a short time"
                    android:textSize="@dimen/alms"
                    />
                <RadioButton
                    android:id="@+id/rbt20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="They came to his help and stayed with him for a long time"
                    android:textSize="@dimen/alms"
                    />
                <RadioButton
                    android:id="@+id/rbt21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="They scolded him for playing pranks"
                    android:textSize="@dimen/alms"
                    />
            </RadioGroup>



            <TextView
                android:id="@+id/kk9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="9) Why did the villagers not come to the boy's help when the Wolf actually came?"
                android:textColor="@color/black"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline5"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/rgp7" />

            <RadioGroup
                android:id="@+id/rgp8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline8"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/kk9"
                >
                <RadioButton
                    android:id="@+id/rbt22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="They were too far away"
                    android:textSize="@dimen/alms"
                    />
                <RadioButton
                    android:id="@+id/rbt23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" They didn't hear the boy's cries for help"
                    android:textSize="@dimen/alms"
                    />
                <RadioButton
                    android:id="@+id/rbt24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="They thought the boy was lying again"
                    android:textSize="@dimen/alms"
                    />
                <RadioButton
                    android:id="@+id/rbt25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="They were afraid of the Wolf"
                    android:textSize="@dimen/alms"
                    />
            </RadioGroup>



            <TextView
                android:id="@+id/kk10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="10) What did the wise man of the village say about the boy?"
                android:textColor="@color/black"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline5"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/rgp8" />

            <RadioGroup
                android:id="@+id/rgp9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline8"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/kk10"
                >
                <RadioButton
                    android:id="@+id/rbt26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" He is a brave and honest boy"
                    android:textSize="@dimen/alms"
                    />
                <RadioButton
                    android:id="@+id/rbt27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" He is a fool who deserved to lose his sheep"
                    android:textSize="@dimen/alms"
                    />
                <RadioButton
                    android:id="@+id/rbt28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" He is a liar who cannot be trusted"
                    android:textSize="@dimen/alms"
                    />
                <RadioButton
                    android:id="@+id/rbt29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="He is a kind and helpful boy who should be rewarded"
                    android:textSize="@dimen/alms"
                    />
            </RadioGroup>

            <Button
                android:id="@+id/but1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="submit"
                android:textSize="@dimen/alm"
                android:background="@drawable/button"
                app:layout_constraintDimensionRatio="1:0.4"
                app:layout_constraintEnd_toStartOf="@id/guideline7"
                app:layout_constraintStart_toStartOf="@id/guideline6"
                app:layout_constraintTop_toBottomOf="@id/rgp9"/>
            <TextView
                android:id="@+id/kk11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:hint="your result"
                android:textSize="@dimen/alms"
                app:layout_constraintEnd_toStartOf="@id/guideline7"
                app:layout_constraintStart_toStartOf="@id/guideline6"
                app:layout_constraintTop_toBottomOf="@id/but1" />

            <TextView
                android:id="@+id/kk12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:textStyle="bold"
                android:text="THE END"
                android:textSize="@dimen/alm"
                android:gravity="center"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintStart_toEndOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/kk11" />










        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>