<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity23"
    android:background="@drawable/brana">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-257dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.02" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.98"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.15"/>
            <Button
                android:id="@+id/ginworld"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_baseline_smart_display_24"
                app:layout_constraintDimensionRatio="1:0.6"
                app:layout_constraintEnd_toStartOf="@+id/guideline6"
                app:layout_constraintStart_toEndOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@id/kk0"/>

            <TextView
                android:id="@+id/kk0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ዶጮ ጫማ ሰፊው"
                android:gravity="center"
                android:fontFamily="@font/jiret"
                android:textColor="@color/black"
                android:textSize="@dimen/alms"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintEnd_toStartOf="@id/guideline5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/imageView2"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/docho1"
                app:layout_constraintDimensionRatio="1:0.6"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/guideline1"
                app:layout_constraintTop_toBottomOf="@id/kk0" />

            <TextView
                android:id="@+id/kk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/docho"
                android:textColor="@color/black"
                android:fontFamily="@font/jiret"
                android:textSize="@dimen/alms"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintEnd_toStartOf="@id/guideline5"
                app:layout_constraintTop_toBottomOf="@id/imageView2"
                app:layout_constraintBottom_toTopOf="@id/imageView3"/>
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/docho2"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toEndOf="@id/guideline1"
                app:layout_constraintTop_toBottomOf="@id/kk"
                />

            <TextView
                android:id="@+id/kk1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/docho1"
                android:textColor="@color/black"
                android:fontFamily="@font/jiret"
                android:textSize="@dimen/alms"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintEnd_toStartOf="@id/guideline5"
                app:layout_constraintTop_toBottomOf="@id/imageView3" />
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/docho3"
                app:layout_constraintDimensionRatio="1:0.6"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toEndOf="@id/guideline1"
                app:layout_constraintTop_toBottomOf="@id/kk1"
                />
            <TextView
                android:id="@+id/kk2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jiret"
                android:text="@string/docho2"
                android:textColor="@color/black"
                android:textSize="@dimen/alms"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintEnd_toStartOf="@id/guideline5"
                app:layout_constraintTop_toBottomOf="@id/imageView4" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/docho4"
                app:layout_constraintDimensionRatio="1:0.6"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toEndOf="@id/guideline1"
                app:layout_constraintTop_toBottomOf="@id/kk2"
                />
            <TextView
                android:id="@+id/kk3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jiret"
                android:text="@string/docho3"
                android:textColor="@color/black"
                android:textSize="@dimen/alms"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintEnd_toStartOf="@id/guideline5"
                app:layout_constraintTop_toBottomOf="@id/imageView5" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/docho5"
                app:layout_constraintDimensionRatio="1:0.6"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toEndOf="@id/guideline1"
                app:layout_constraintTop_toBottomOf="@id/kk3"
                />
            <TextView
                android:id="@+id/kk4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jiret"
                android:text="@string/docho4"
                android:textColor="@color/black"
                android:textSize="@dimen/alms"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintEnd_toStartOf="@id/guideline5"
                app:layout_constraintTop_toBottomOf="@id/imageView6" />
            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/docho6"
                app:layout_constraintDimensionRatio="1:0.6"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toEndOf="@id/guideline1"
                app:layout_constraintTop_toBottomOf="@id/kk4"
                />
            <TextView
                android:id="@+id/kk5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jiret"
                android:text="@string/docho5"
                android:textColor="@color/black"
                android:textSize="@dimen/alms"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintEnd_toStartOf="@id/guideline5"
                app:layout_constraintTop_toBottomOf="@id/imageView7" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>